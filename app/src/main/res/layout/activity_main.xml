<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="#faf6f1"
    tools:context="junyou.com.hbtools.MainActivity">
    <!--新的布局-->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_header"
        android:background="#f23b3b"
        android:layout_alignParentTop="true"
        >
        <!--设置按钮-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_setting"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingRight="130px"
            android:paddingTop="20dp"
            android:src="@mipmap/icon_set"
            android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_red_point"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_alignRight="@+id/imageButton_setting"
                android:paddingRight="68dp"
                android:paddingTop="20dp"/>
        <!--帮助按钮-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_help"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingRight="50px"
            android:paddingTop="20dp"
            android:src="@mipmap/icon_help"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/top_img"
            android:paddingTop="75dp"/>
        <!--可以抢的图-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/top_img_radpacket_on"
            android:layout_centerHorizontal="true"
            android:paddingTop="50dp"
            android:id="@+id/top_img_show"/>

        <!--红包个数标签-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="0"
            android:paddingLeft="50px"
            android:paddingTop="200px"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:id="@+id/packt_num_text"/>
        <!--金额标签-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="0.00"
            android:paddingLeft="300px"
            android:paddingTop="200px"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:id="@+id/money_num_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="红包个数"
            android:paddingLeft="50px"
            android:paddingTop="280px"
            android:textColor="#ffffff"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="金额"
            android:paddingLeft="320px"
            android:paddingTop="280px"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>
    <!--通告-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_trumpet"
        android:src="@mipmap/icon_trumpet"
        android:layout_above="@+id/should_openServer"
        android:layout_marginLeft="45dp"/>
    <!--我要的跑马灯呢?-->
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/marquee_word_1"
        android:id="@+id/marquee_text"
        android:singleLine="true"
        android:textColor="@color/colorwhite"
        android:layout_toRightOf="@id/id_trumpet"
        android:layout_above="@+id/should_openServer"
        android:layout_centerHorizontal="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        tools:layout="@android:layout/simple_list_item_1"
        android:background="#f2db6f"
        android:layout_alignParentBottom="true"
        >
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:id="@+id/should_openServer"
        android:background="#f2db6f"
        android:layout_alignParentBottom="true"
        android:onClick="openSettings"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要开启辅助功能才能自动抢红包，点击开启"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/mainavt_layout"
        tools:layout="@android:layout/simple_list_item_1"
        android:background="#f2f2f2"
        android:layout_marginTop="280dp"
        android:layout_alignParentBottom="true"
        >
    <RelativeLayout
        android:id="@+id/mainavt_layout_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f1eceb"
        android:layout_marginTop="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_weixin"
            android:paddingLeft="10dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信红包"
                android:layout_margin="2dp"
                android:textColor="#161616"
                android:textSize="15dp"
                android:paddingLeft="50dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动抢"
                android:layout_margin="2dp"
                android:textColor="#dfaa6a"
                android:paddingLeft="50dp"
                android:textSize="12dp"
                android:id="@+id/wechat_auto"/>
        </LinearLayout>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:id="@+id/open_wechat_switch"
            android:checked="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mainavt_layout_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#f1eceb"
            android:layout_marginTop="1dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_qq"
                android:paddingLeft="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ红包"
                    android:layout_margin="2dp"
                    android:textColor="#161616"
                    android:textSize="15dp"
                    android:paddingLeft="50dp"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动抢"
                    android:layout_margin="2dp"
                    android:textColor="#dfaa6a"
                    android:paddingLeft="50dp"
                    android:textSize="12dp"
                    android:id="@+id/qq_auto"/>
            </LinearLayout>
            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:id="@+id/open_qq_switch"
                android:checked="true"/>
        </RelativeLayout>
    </LinearLayout>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/under_icon_clock"
    android:src="@mipmap/under_icon_clock_good"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:paddingRight="10dp"
    android:onClick="getMoreTime"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/under_icon_tool"
    android:src="@mipmap/under_icon_tooltip"
    android:layout_above="@+id/under_icon_clock"
    android:layout_alignParentRight="true"
    android:paddingRight="30dp"
    android:layout_marginBottom="-10dp"
    android:onClick="getMoreTime"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/left_days_text"
    android:text="10天"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="35dp"
    android:paddingBottom="35dp"
    android:textSize="20dp"
    android:textColor="@color/colorwhite"/>
</RelativeLayout>

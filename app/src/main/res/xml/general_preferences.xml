<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  tools:context=".SettingActivity"
                  android:icon="@null">
    <PreferenceCategory
            android:title=""
            android:layout="@layout/preference_category">
        <CheckBoxPreference
                android:key="pref_watch_notification"
                android:title="红包快手"
            android:summary="开启或关闭红包快手"
                android:defaultValue="true"
                android:layout="@layout/preference_checkbox"/>
        <CheckBoxPreference
                android:key="pref_no_notes"
                android:title="红包免打扰"
            android:summary="开启免打扰模式"
                android:layout="@layout/preference_checkbox"
                android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="pref_no_ad"
            android:title="立即去广告"
            android:summary="开启无广告模式"
            android:layout="@layout/preference_checkbox"
            android:defaultValue="false"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title=""
            android:layout="@layout/preference_category">
        <Preference
                android:key="pref_etc_check_update"
                android:title="红包权限设置"
                android:summary=""
                android:layout="@layout/preference_checkbox"/>
        <Preference
                android:key="pref_etc_issue"
                android:title="关于"
                android:summary=""
                android:layout="@layout/preference_checkbox"/>
    </PreferenceCategory>
</PreferenceScreen>